<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/content_frame"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?attr/BackgroundColor">

	<androidx.appcompat.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="?attr/colorPrimary"
		android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
		app:titleTextColor="?attr/TitleTextColor"
		app:subtitleTextColor="?attr/SubtitleTextColor" />

	<ScrollView
		android:id="@+id/cards_scrollview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/toolbar"
		android:clipToPadding="false">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="vertical"
			android:padding="16dp">

			<androidx.cardview.widget.CardView
				android:id="@+id/cardview_cellular_data_ip"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="100dp"
				android:layout_gravity="center_horizontal"
				android:foreground="?android:attr/selectableItemBackground"
				app:cardCornerRadius="8dp"
				app:cardElevation="8dp"
				app:cardBackgroundColor="?CardBackgroundColor">

				<LinearLayout
					android:id="@+id/sidebar_cellular_data_ip"
					android:layout_width="8dp"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:gravity="left"
					android:background="@color/toolCardCellularDataIP" />

				<LinearLayout
					android:id="@+id/linear_layout_cellular_data_ip"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal"
					android:layout_gravity="center">

					<androidx.cardview.widget.CardView
						android:id="@+id/cardview_bg_icon_cellular_data_ip"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:layout_marginStart="32dp"
						android:layout_marginEnd="16dp"
						android:layout_marginBottom="8dp"
						android:layout_gravity="start|center_vertical"
						app:cardCornerRadius="32dp"
						app:cardElevation="4dp"
						app:cardBackgroundColor="@color/toolCardCellularDataIP">

						<ImageView
							android:id="@+id/icon_cellular_data_ip"
							android:layout_width="48dp"
							android:layout_height="48dp"
							android:layout_margin="8dp"
							android:src="@drawable/ic_cellular_ip_light" />

					</androidx.cardview.widget.CardView>

					<TextView
						android:id="@+id/textview_cellular_data_ip"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:layout_marginLeft="16dp"
						android:layout_marginRight="16dp"
						android:layout_marginBottom="8dp"
						android:layout_gravity="center"
						android:textSize="18sp"
						android:textColor="?attr/TextColor"
						android:text="@string/cellular_data_ip" />

				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/cardview_router_setup"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="100dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="16dp"
				android:foreground="?android:attr/selectableItemBackground"
				app:cardCornerRadius="8dp"
				app:cardElevation="8dp"
				app:cardBackgroundColor="?CardBackgroundColor">

				<LinearLayout
					android:id="@+id/sidebar_router_setup"
					android:layout_width="8dp"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:gravity="left"
					android:background="@color/toolCardRouterSetup" />

				<LinearLayout
					android:id="@+id/linear_layout_router_setup"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal"
					android:layout_gravity="center">

					<androidx.cardview.widget.CardView
						android:id="@+id/cardview_bg_icon_router_setup"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:layout_marginStart="32dp"
						android:layout_marginEnd="16dp"
						android:layout_marginBottom="8dp"
						android:layout_gravity="start|center_vertical"
						app:cardCornerRadius="32dp"
						app:cardElevation="4dp"
						app:cardBackgroundColor="@color/toolCardRouterSetup">

						<ImageView
							android:id="@+id/icon_router_setup"
							android:layout_width="48dp"
							android:layout_height="48dp"
							android:layout_margin="8dp"
							android:src="@drawable/ic_router_setup_light" />

					</androidx.cardview.widget.CardView>

					<TextView
						android:id="@+id/textview_router_setup"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:layout_marginLeft="16dp"
						android:layout_marginRight="16dp"
						android:layout_marginBottom="8dp"
						android:layout_gravity="center"
						android:textSize="18sp"
						android:textColor="?attr/TextColor"
						android:text="@string/router_setup" />

				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/cardview_ping_tool"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="100dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="16dp"
				android:foreground="?android:attr/selectableItemBackground"
				app:cardCornerRadius="8dp"
				app:cardElevation="8dp"
				app:cardBackgroundColor="?CardBackgroundColor">

				<LinearLayout
					android:id="@+id/sidebar_ping_tool"
					android:layout_width="8dp"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:gravity="left"
					android:background="@color/toolCardPingTool" />

				<LinearLayout
					android:id="@+id/linear_layout_ping_tool"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal"
					android:layout_gravity="center">

					<androidx.cardview.widget.CardView
						android:id="@+id/cardview_bg_icon_ping_tool"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:layout_marginStart="32dp"
						android:layout_marginEnd="16dp"
						android:layout_marginBottom="8dp"
						android:layout_gravity="start|center_vertical"
						app:cardCornerRadius="32dp"
						app:cardElevation="4dp"
						app:cardBackgroundColor="@color/toolCardPingTool">

						<ImageView
							android:id="@+id/icon_ping_tool"
							android:layout_width="48dp"
							android:layout_height="48dp"
							android:layout_margin="8dp"
							android:src="@drawable/ic_ping_light" />

					</androidx.cardview.widget.CardView>

					<TextView
						android:id="@+id/textview_ping_tool"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:layout_marginLeft="16dp"
						android:layout_marginRight="16dp"
						android:layout_marginBottom="8dp"
						android:layout_gravity="center"
						android:textSize="18sp"
						android:textColor="?attr/TextColor"
						android:text="@string/ping_tool" />

				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/cardview_subnet_scanner"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="100dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="16dp"
				android:foreground="?android:attr/selectableItemBackground"
				app:cardCornerRadius="8dp"
				app:cardElevation="8dp"
				app:cardBackgroundColor="?CardBackgroundColor">

				<LinearLayout
					android:id="@+id/sidebar_subnet_scanner"
					android:layout_width="8dp"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:gravity="left"
					android:background="@color/toolCardSubnetScanner" />

				<LinearLayout
					android:id="@+id/linear_layout_subnet_scanner"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal"
					android:layout_gravity="center">

					<androidx.cardview.widget.CardView
						android:id="@+id/cardview_bg_icon_subnet_scanner"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:layout_marginStart="32dp"
						android:layout_marginEnd="16dp"
						android:layout_marginBottom="8dp"
						android:layout_gravity="start|center_vertical"
						app:cardCornerRadius="32dp"
						app:cardElevation="4dp"
						app:cardBackgroundColor="@color/toolCardSubnetScanner">

						<ImageView
							android:id="@+id/icon_subnet_scanner"
							android:layout_width="48dp"
							android:layout_height="48dp"
							android:layout_margin="8dp"
							android:src="@drawable/ic_subnet_scanner_light" />

					</androidx.cardview.widget.CardView>

					<TextView
						android:id="@+id/textview_subnet_scanner"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:layout_marginLeft="16dp"
						android:layout_marginRight="16dp"
						android:layout_marginBottom="8dp"
						android:layout_gravity="center"
						android:textSize="18sp"
						android:textColor="?attr/TextColor"
						android:text="@string/subnet_scanner" />

				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/cardview_port_scanner"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="100dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="16dp"
				android:foreground="?android:attr/selectableItemBackground"
				app:cardCornerRadius="8dp"
				app:cardElevation="8dp"
				app:cardBackgroundColor="?CardBackgroundColor">

				<LinearLayout
					android:id="@+id/sidebar_port_scanner"
					android:layout_width="8dp"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:gravity="left"
					android:background="@color/toolCardPortScanner" />

				<LinearLayout
					android:id="@+id/linear_layout_port_scanner"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal"
					android:layout_gravity="center">

					<androidx.cardview.widget.CardView
						android:id="@+id/cardview_bg_icon_port_scanner"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:layout_marginStart="32dp"
						android:layout_marginEnd="16dp"
						android:layout_marginBottom="8dp"
						android:layout_gravity="start|center_vertical"
						app:cardCornerRadius="32dp"
						app:cardElevation="4dp"
						app:cardBackgroundColor="@color/toolCardPortScanner">

						<ImageView
							android:id="@+id/icon_port_scanner"
							android:layout_width="48dp"
							android:layout_height="48dp"
							android:layout_margin="8dp"
							android:src="@drawable/ic_port_scan_light" />

					</androidx.cardview.widget.CardView>

					<TextView
						android:id="@+id/textview_port_scanner"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:layout_marginLeft="16dp"
						android:layout_marginRight="16dp"
						android:layout_marginBottom="8dp"
						android:layout_gravity="center"
						android:textSize="18sp"
						android:textColor="?attr/TextColor"
						android:text="@string/port_scanner" />

				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/cardview_whois_tool"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="100dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="16dp"
				android:foreground="?android:attr/selectableItemBackground"
				app:cardCornerRadius="8dp"
				app:cardElevation="8dp"
				app:cardBackgroundColor="?CardBackgroundColor">

				<LinearLayout
					android:id="@+id/sidebar_whois_tool"
					android:layout_width="8dp"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:gravity="left"
					android:background="@color/toolCardWhoisTool" />

				<LinearLayout
					android:id="@+id/linear_layout_whois_tool"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal"
					android:layout_gravity="center">

					<androidx.cardview.widget.CardView
						android:id="@+id/cardview_bg_icon_whois_tool"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:layout_marginStart="32dp"
						android:layout_marginEnd="16dp"
						android:layout_marginBottom="8dp"
						android:layout_gravity="start|center_vertical"
						app:cardCornerRadius="32dp"
						app:cardElevation="4dp"
						app:cardBackgroundColor="@color/toolCardWhoisTool">

						<ImageView
							android:id="@+id/icon_whois_tool"
							android:layout_width="48dp"
							android:layout_height="48dp"
							android:layout_margin="8dp"
							android:src="@drawable/ic_whois_tool_light" />

					</androidx.cardview.widget.CardView>

					<TextView
						android:id="@+id/textview_whois_tool"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:layout_marginLeft="16dp"
						android:layout_marginRight="16dp"
						android:layout_marginBottom="8dp"
						android:layout_gravity="center"
						android:textSize="18sp"
						android:textColor="?attr/TextColor"
						android:text="@string/whois_tool" />

				</LinearLayout>

			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/cardview_dns_lookup"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="100dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="16dp"
				android:foreground="?android:attr/selectableItemBackground"
				app:cardCornerRadius="8dp"
				app:cardElevation="8dp"
				app:cardBackgroundColor="?CardBackgroundColor">

				<LinearLayout
					android:id="@+id/sidebar_dns_lookup"
					android:layout_width="8dp"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:gravity="left"
					android:background="@color/toolCardDNSLookup" />

				<LinearLayout
					android:id="@+id/linear_layout_dns_lookup"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal"
					android:layout_gravity="center">

					<androidx.cardview.widget.CardView
						android:id="@+id/cardview_bg_icon_dns_lookup"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:layout_marginStart="32dp"
						android:layout_marginEnd="16dp"
						android:layout_marginBottom="8dp"
						android:layout_gravity="start|center_vertical"
						app:cardCornerRadius="32dp"
						app:cardElevation="4dp"
						app:cardBackgroundColor="@color/toolCardDNSLookup">

						<ImageView
							android:id="@+id/icon_dns_lookup"
							android:layout_width="48dp"
							android:layout_height="48dp"
							android:layout_margin="8dp"
							android:src="@drawable/ic_dns_lookup_light" />

					</androidx.cardview.widget.CardView>

					<TextView
						android:id="@+id/textview_dns_lookup"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:layout_marginLeft="16dp"
						android:layout_marginRight="16dp"
						android:layout_marginBottom="8dp"
						android:layout_gravity="center"
						android:textSize="18sp"
						android:textColor="?attr/TextColor"
						android:text="@string/dns_lookup" />

				</LinearLayout>

			</androidx.cardview.widget.CardView>

		</LinearLayout>

	</ScrollView>

</RelativeLayout>

