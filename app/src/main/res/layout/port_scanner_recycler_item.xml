<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:clickable="true"
	android:focusable="true"
	android:background="?android:attr/selectableItemBackground">

	<RelativeLayout
		android:id="@+id/port_scanner_item_root"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<RelativeLayout
			android:id="@+id/port_scanner_item_relative_layout_open_port"
			android:layout_width="80dp"
			android:layout_height="60dp"
			android:orientation="vertical"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true">

			<TextView
				android:id="@+id/port_scanner_item_open_port"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:layout_centerVertical="true"
				android:textColor="?attr/CardTextColor"
				android:textSize="18sp"
				android:textStyle="bold" />

		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/port_scanner_item_relative_layout_port_desc"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignTop="@id/port_scanner_item_relative_layout_open_port"
			android:layout_alignBottom="@id/port_scanner_item_relative_layout_open_port"
			android:layout_alignParentEnd="true"
			android:layout_toEndOf="@id/port_scanner_item_relative_layout_open_port"
			android:orientation="horizontal">

			<LinearLayout
				android:id="@+id/port_scanner_item_linear_layout_port_desc"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:orientation="vertical">

				<TextView
					android:id="@+id/port_scanner_item_port_service_name"
					android:layout_width="wrap_content"
					android:layout_height="30dp"
					android:paddingTop="8dp"
					android:paddingEnd="16dp"
					android:textColor="?attr/CardTextColor"
					android:textSize="14sp" />

				<TextView
					android:id="@+id/port_scanner_item_port_service_desc"
					android:layout_width="wrap_content"
					android:layout_height="30dp"
					android:paddingEnd="16dp"
					android:paddingBottom="8dp"
					android:textColor="?attr/CardTextColor"
					android:textSize="14sp" />

			</LinearLayout>

			<RelativeLayout
				android:id="@+id/port_scanner_item_relative_layout_port_protocol"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:layout_toEndOf="@id/port_scanner_item_linear_layout_port_desc"
				android:layout_alignParentEnd="true">

				<TextView
					android:id="@+id/port_scanner_item_port_service_protocol"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:layout_alignParentEnd="true"
					android:paddingEnd="16dp"
					android:textColor="?attr/CardTextColor"
					android:textSize="14sp" />

			</RelativeLayout>

		</RelativeLayout>

	</RelativeLayout>

</LinearLayout>