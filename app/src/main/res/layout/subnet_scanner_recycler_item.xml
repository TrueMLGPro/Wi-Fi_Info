<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:clickable="true"
	android:focusable="true"
	android:background="?android:attr/selectableItemBackground">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/subnet_scanner_item_ip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="14sp"
			android:textColor="?attr/CardTextColor"
			android:layout_alignParentStart="true"
			android:layout_toStartOf="@id/subnet_scanner_item_device_type"
			android:paddingTop="16dp"
			android:paddingStart="8dp"
			android:paddingEnd="8dp" />

		<TextView
			android:id="@+id/subnet_scanner_item_device_type"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="14sp"
			android:textColor="?attr/CardTextColor"
			android:layout_alignParentEnd="true"
			android:paddingTop="16dp"
			android:paddingStart="8dp"
			android:paddingEnd="8dp" />

	</RelativeLayout>

	<TextView
		android:id="@+id/subnet_scanner_item_mac"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="14sp"
		android:textColor="?attr/CardTextColor"
		android:paddingBottom="16dp"
		android:paddingStart="8dp"
		android:paddingEnd="8dp" />

</LinearLayout>